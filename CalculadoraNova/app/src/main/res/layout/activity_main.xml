<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="73dp"
        tools:layout_editor_absoluteY="16dp">

        <EditText
            android:id="@+id/txtResultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btnLimpar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="clicar"
                    android:text="Limpar" />

                <Button
                    android:id="@+id/btnPotencia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="clicar"
                    android:text="^" />

                <Button
                    android:id="@+id/btnPorcentagem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="clicar"
                    android:text="%" />

                <Button
                    android:id="@+id/btnDivs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="clicar"
                    android:text="/" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btnSete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="clicar"
                    android:text="7" />

                <Button
                    android:id="@+id/btnOito"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="clicar"
                    android:text="8" />

                <Button
                    android:id="@+id/btnNove"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="clicar"
                    android:text="9" />

                <Button
                    android:id="@+id/btnMult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="clicar"
                    android:text="*" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btnQuatro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="clicar"
                    android:text="4" />

                <Button
                    android:id="@+id/btnCinco"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="clicar"
                    android:text="5" />

                <Button
                    android:id="@+id/btnSeis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="clicar"
                    android:text="6" />

                <Button
                    android:id="@+id/btnSub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="clicar"
                    android:text="-" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btnUm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="clicar"
                    android:text="1" />

                <Button
                    android:id="@+id/btnDois"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="clicar"
                    android:text="2" />

                <Button
                    android:id="@+id/btnTres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="clicar"
                    android:text="3" />

                <Button
                    android:id="@+id/btnSoma"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="clicar"
                    android:text="+" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btnPonto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="clicar"
                    android:text="." />

                <Button
                    android:id="@+id/btnZero"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="clicar"
                    android:text="0" />

                <Button
                    android:id="@+id/btnRaiz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="clicar"
                    android:text="V" />

                <Button
                    android:id="@+id/btnIgual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="clicar"
                    android:text="=" />

            </TableRow>

        </TableLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
